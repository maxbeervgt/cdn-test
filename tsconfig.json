{
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "typings/**/*"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "outDir": "./dist",
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "node"],
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "baseUrl": ".",
        "paths": {
          "@/*": ["src/*"]
        }
    }
    
}
